{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "major": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackageNames": ["@kawaiioverflow/arm"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true
        },
        {
            "excludePackageNames": ["@kawaiioverflow/arm"],
            "enabled": false
        }
    ],
    "timezone": "Asia/Tokyo",
    "dependencyDashboard": false,
    "automerge": false,
    "branchConcurrentLimit": 0
}
