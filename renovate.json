{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "major": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackageNames": ["@kawaiioverflow/arm"],
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true
        }
    ],
    "timezone": "Asia/Tokyo"
}
